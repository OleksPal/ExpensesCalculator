@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="rounded mx-5 my-4" style="background: #0b1739">
    <div class="container-fluid p-3 text-white">
        <h1>@ViewData["Title"]</h1>
        <h2>Enter your email.</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form method="post" style="text-black">
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control text-black" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label text-black"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Resend</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
