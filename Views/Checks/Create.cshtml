@model ExpensesCalculator.Models.Check

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Check</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-route-dayexpensesid="@ViewData["DayExpensesId"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VerificationPath" class="control-label"></label>
                <input asp-for="VerificationPath" class="form-control" />
                <span asp-validation-for="VerificationPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payer" class="control-label"></label><br />
                @Html.DropDownListFor(m => m.Payer, ViewData["Participants"] as SelectList,
                    "Choose payer", new { @class = "form-control" })
                <span asp-validation-for="Payer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@ViewData["PreviousUrl"]">Back</a>
</div>

