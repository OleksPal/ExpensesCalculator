@model ExpensesCalculator.Models.Check

<script src="~/js/ajax/checks/delete-check.js"></script>

<div class="modal-header">
    <h5 class="modal-title">Delete check</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-action="Delete">
        <div class="form-group mb-3">
            <label asp-for="Location" class="control-label"></label>
            <input asp-for="Location" class="form-control" disabled readonly />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Sum" class="control-label"></label>
            <input asp-for="Sum" class="form-control" disabled readonly />
            <span asp-validation-for="Sum" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Payer" class="control-label"></label>
            <input asp-for="Payer" class="form-control" disabled readonly />
            <span asp-validation-for="Payer" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="button" value="Delete" class="btn btn-danger" id="deleteCheckButton">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>
</div>

<script>
    var token = '@Html.AntiForgeryToken()';
    var checkId = $("#Id").val();
    var dayExpensesId = @ViewData["DayExpensesId"];
</script>
