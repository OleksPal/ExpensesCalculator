@model Check

<td id="checkItemList-@Model.Id" colspan="6">
    <div class="collapse" id="check-@Model.Id">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                onclick="showModalForItemCreate(@Model.Id, @Model.DayExpensesId)">
            <i class="bi bi-plus-circle"></i> Add item
        </button>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Items.First().Users)
                    </th>
                    <th width="80px"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Price)
                        </td>
                        <td>
                            @foreach (var user in item.UsersList)
                            {
                                <label>@user; </label>
                            }
                        </td>
                        <td>                            
                            <div class="btn-group" role="group">
                                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                                        onclick="showModalForItemEdit(@item.Id, @Model.DayExpensesId)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-danger" data-bs-toggle="modal"
                                        data-bs-target="#staticBackdrop"
                                        onclick="showModalForItemDelete(@item.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</td>
<input type="hidden" id="check-@Model.Id-NewSum" value="@Model.Sum₴" />
