@model ExpensesCalculator.Models.ManageCheckItemsViewModel

<td colspan="6">
    <div class="collapse" id="check-@Model.Check.Id">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                onclick="showModalForItemCreate(@Model.Check.Id, @Model.DayExpensesId)">
            <i class="bi bi-plus-circle"></i> Add item
        </button>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Check.Items.ToList()[0].Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Check.Items.ToList()[0].Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Check.Items.ToList()[0].Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Check.Items.ToList()[0].Users)
                    </th>
                    <th style="width:80px;"></th>
                    <th style="width:100px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Check.Items)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.Price)
                        </td>
                        <td>
                            @foreach (var user in item.UsersList)
                            {
                                <label>@user; </label>
                            }
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                                    onclick="showModalForItemEdit(@item.Id, @Model.Check.Id, @Model.DayExpensesId)">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#staticBackdrop" 
                                    onclick="showModalForItemDelete(@item.Id, @Model.Check.Id, @Model.DayExpensesId)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</td>
<input type="hidden" id="check-@Model.Check.Id-NewSum" value="@Model.Check.Sum" />
