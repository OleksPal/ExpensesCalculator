@model ExpensesCalculator.Models.DayExpensesViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DayExpenses</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
    </dl>
    @foreach (var check in Model.Checks) 
    {
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => check.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => check.Location)
            </dd>
        </dl>
        @foreach (var item in check.Items)
        {
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => item.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => item.Price)
                </dd>            
            </dl> 
        }
    }    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.DayExpensesId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
