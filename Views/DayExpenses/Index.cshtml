@model IEnumerable<ExpensesCalculator.Models.DayExpenses>

@{
    ViewData["Title"] = "Expenses List";
}

<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />

<h1>Expenses List</h1>

<table class="table table-striped" id="daysTable">
    <thead>
        <tr>
            <th style="width:36px;"></th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Participants)
            </th>
            <th style="width:36px;"></th>
            <th style="width:36px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in Model)
        {
            <tr>
                <td>
                    <span role="button" style="user-select: none;"
                          data-bs-toggle="collapse" data-bs-target="#day-@day.Id"
                          aria-expanded="false" aria-controls="day-@day.Id">&#9655;</span>
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Date)
                </td>
                <td>
                    @foreach (var participant in day.Participants)
                    {
                        <label>@participant; </label>
                    }
                </td>
                <td>
                    <i class="bi bi-pencil-square" role="button"></i>
                </td>
                <td>
                    <i class="bi bi-trash" role="button"></i>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div class="collapse" id="day-@day.Id">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Checks[0].Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Checks[0].Sum)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Checks[0].Payer)
                                    </th>
                                    <th style="width:36px;"></th>
                                    <th style="width:36px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var check in day.Checks)
                                {
                                    <tr>
                                        <td>
                                            <span role="button" style="user-select: none;"
                                                  data-bs-toggle="collapse" data-bs-target="#check-@check.Id"
                                                  aria-expanded="false" aria-controls="check-@check.Id">&#9655;</span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => check.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => check.Sum)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => check.Payer)
                                        </td>
                                        <td>
                                            <i class="bi bi-pencil-square" role="button"></i>
                                        </td>
                                        <td>
                                            <i class="bi bi-trash" role="button"></i>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="6">
                                            <div class="collapse" id="check-@check.Id">
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Checks[0].Items[0].Name)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Checks[0].Items[0].Description)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Checks[0].Items[0].Price)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Checks[0].Items[0].Users)
                                                            </th>
                                                            <th style="width:36px;"></th>
                                                            <th style="width:36px;"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach(var item in check.Items)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(model => item.Name)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(model => item.Description)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(model => item.Price)
                                                                </td>
                                                                <td>
                                                                    @foreach(var user in item.Users)
                                                                    {
                                                                        <label>@user; </label>
                                                                    }                                                                    
                                                                </td>
                                                                <td>
                                                                    <i class="bi bi-pencil-square" role="button"></i>
                                                                </td>
                                                                <td>
                                                                    <i class="bi bi-trash" role="button"></i>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </td>                
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

