@using Newtonsoft.Json
@model ExpensesCalculator.Models.DayExpensesViewModel

@{
    ViewData["Title"] = "Expenses List";
}

<link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
<link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />

<h1>Expenses List</h1><br />

<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
        onclick="showModal('Create', 0)">
    <i class="bi bi-plus-circle"></i> Add expenses
</button>


<hr />

<table class="table table-striped" id="daysTable">
    <thead>
        <tr>
            <th style="width:36px;"></th>
            <th>
                @Html.DisplayNameFor(model => model.Day.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Day.Participants)
            </th>
            <th style="width:36px;"></th>
            <th style="width:36px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var day in Model.Days)
        {
            <tr>
                <td>
                    <span role="button" style="user-select: none;"
                          data-bs-toggle="collapse" data-bs-target="#day-@day.Id"
                          aria-expanded="false" aria-controls="day-@day.Id">&#9655;</span>
                </td>
                <td>
                    @Html.DisplayFor(model => day.Date)
                </td>
                <td>
                    @foreach (var participant in day.Participants)
                    {
                        <label>@participant; </label>
                    }
                </td>
                <td>
                    <i class="bi bi-pencil-square" role="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                       onclick="showModal('Edit', @day.Id)"></i>
                </td>
                <td>
                    <i class="bi bi-trash" role="button" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                       onclick="showModal('Delete', @day.Id)"></i>
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div class="collapse" id="day-@day.Id">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Check.Location)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Check.Sum)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Check.Payer)
                                    </th>
                                    <th style="width:36px;"></th>
                                    <th style="width:36px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var check in day.Checks)
                                {
                                    <tr>
                                        <td>
                                            <span role="button" style="user-select: none;"
                                                  data-bs-toggle="collapse" data-bs-target="#check-@check.Id"
                                                  aria-expanded="false" aria-controls="check-@check.Id">&#9655;</span>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => check.Location)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => check.Sum)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => check.Payer)
                                        </td>
                                        <td>
                                            <i class="bi bi-pencil-square" role="button"></i>
                                        </td>
                                        <td>
                                            <i class="bi bi-trash" role="button"></i>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="6">
                                            <div class="collapse" id="check-@check.Id">
                                                <table class="table table-striped table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Item.Name)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Item.Description)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Item.Price)
                                                            </th>
                                                            <th>
                                                                @Html.DisplayNameFor(model => model.Item.Users)
                                                            </th>
                                                            <th style="width:36px;"></th>
                                                            <th style="width:36px;"></th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach(var item in check.Items)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @Html.DisplayFor(model => item.Name)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(model => item.Description)
                                                                </td>
                                                                <td>
                                                                    @Html.DisplayFor(model => item.Price)
                                                                </td>
                                                                <td>
                                                                    @foreach(var user in item.Users)
                                                                    {
                                                                        <label>@user; </label>
                                                                    }                                                                    
                                                                </td>
                                                                <td>
                                                                    <i class="bi bi-pencil-square" role="button"></i>
                                                                </td>
                                                                <td>
                                                                    <i class="bi bi-trash" role="button"></i>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </td>                
            </tr>
        }
    </tbody>
</table>

<!-- Edit Modal -->
<div class="modal fade"
     id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Edit</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="idc">

            </div>
        </div>
    </div>
</div>

<script>
    function showModal(act, dayId) {
        $(document).ready(function () {
            if (act == 'Create') {
                $.get(`/DayExpenses/CreateDayExpenses/`, function (data) {
                    $('#idc').html(data);
                    $('#staticBackdropLabel').html(act);
                });
            }
            else{
                $.get(`/DayExpenses/ChangeDayExpenses/${dayId}?act=${act.toString()}`, function (data) {
                    $('#idc').html(data);
                    $('#staticBackdropLabel').html(act);
                });
            }            
        });        
    }
</script>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Day.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Days) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

