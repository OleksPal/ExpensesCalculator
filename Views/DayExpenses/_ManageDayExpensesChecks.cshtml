@model ExpensesCalculator.Models.ManageDayExpensesChecksViewModel

<td colspan="6">
    <div class="collapse" id="day-@Model.DayExpensesId">
        <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                onclick="showModalForCheck('Create', 0, @Model.DayExpensesId)">
            <i class="bi bi-plus-circle"></i> Add check
        </button>
        <hr />
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Checks[0].Location)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Checks[0].Sum)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Checks[0].Payer)
                    </th>
                    <th style="width:80px;"></th>
                    <th style="width:100px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var check in @Model.Checks)
                {
                    <tr>
                        <td>
                            <span role="button" style="user-select: none;"
                                  onclick="getCheckItemsManager(@check.Id, @Model.DayExpensesId)"
                                  data-bs-toggle="collapse" data-bs-target="#check-@check.Id"
                                  aria-expanded="false" aria-controls="check-@check.Id">&#9655;</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => check.Location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => check.Sum)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => check.Payer)
                        </td>
                        <td>
                            <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                                    onclick="showModalForCheck('Edit', @check.Id, @Model.DayExpensesId)">
                                <i class="bi bi-pencil"></i> Edit
                            </button>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#staticBackdrop" onclick="showModalForCheck('Delete', @check.Id, @Model.DayExpensesId)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                    <tr id="check-@check.Id-Items"></tr>
                }
            </tbody>
        </table>
    </div>
</td>
