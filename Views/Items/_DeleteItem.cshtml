@model ExpensesCalculator.Models.Item

<div class="modal-header">
    <h5 class="modal-title">Delete expenses</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-action="Delete" asp-route-checkid="@ViewData["CheckId"]">
        <div class="form-group mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" disabled readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled readonly />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" disabled readonly />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Users" class="control-label"></label>
            <input asp-for="Users" value="@ViewData["FormatParticipantNames"]" class="form-control" disabled readonly />
            <span asp-validation-for="Users" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="submit" value="Delete" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
    </form>
</div>
