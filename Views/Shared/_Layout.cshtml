<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpensesCalculator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpensesCalculator.styles.css" asp-append-version="true" />
</head>
<body>
    <main>
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-2 px-sm-2 px-0 bg-dark">
                    <div class="d-flex flex-column align-items-left align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-sm-start" style="margin-left:0px;" id="menu">
                            <li class="nav-item">
                                <a class="align-middle px-0 text-white text-decoration-none" style="user-select: none; font-family: 'Brush Script MT', cursive;">
                                    <i class="fs-4 bi-calculator"></i><span class="ms-1 d-none d-sm-inline">ExpensesCalculator</span>
                                </a>
                            </li>
                            <hr />
                            <li class="nav-item">
                                <a class="nav-link align-middle px-0" asp-controller="Home" asp-action="Index">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="DayExpenses" asp-action="Index" class="nav-link align-middle px-0">
                                    <i class="fs-4 bi-list-nested"></i> <span class="ms-1 d-none d-sm-inline">Expenses list</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-8 py-3">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
