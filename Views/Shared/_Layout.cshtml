<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpensesCalculator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpensesCalculator.styles.css" asp-append-version="true" />
</head>
<body>
    <main>
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-black">
                    <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                        <div class="nav-item">
                            <a class="d-flex align-items-center mb-md-0 me-md-auto text-white text-decoration-none" style="user-select: none; font-family: 'Brush Script MT', cursive;">
                                <i class="fs-5 bi-calculator"></i> <span class="fs-5 d-none d-sm-inline">ExpensesCalculator</span>
                            </a>                            
                        </div>  
                        <hr class="w-100" />
                        <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-sm-start mx-0" id="menu">                              
                            <li class="nav-item">
                                <a class="nav-link align-middle px-0" asp-controller="Home" asp-action="Index">
                                    <i class="fs-4 bi-house"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-area="" asp-controller="DayExpenses" asp-action="Index" class="nav-link align-middle px-0">
                                    <i class="fs-4 bi-list-nested"></i> <span class="ms-1 d-none d-sm-inline">My expenses list</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>   
                <div class="col-10" style="padding: 0;">
                    <nav class="navbar navbar-expand-sm bg-dark px-4">
                        <partial name="_LoginPartial" />
                    </nav>
                    <div class="py-3 container-fluid" ">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
