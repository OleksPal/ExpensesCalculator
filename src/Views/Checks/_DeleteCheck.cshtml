@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model Check

<div class="modal-header">
    <h5 class="modal-title">@Localizer["DeleteCheck"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DayExpensesId" />
        <div class="form-group mb-3">
            <i class="bi bi-cart-fill"></i>
            <label class="control-label">@Localizer["Location"]</label>
            <input asp-for="Location" class="form-control" disabled readonly />
        </div>
        <div class="form-group mb-3">
            <i class="bi bi-cash-stack pe-1"></i>
            <label class="control-label">@Localizer["Sum"]</label>
            <input asp-for="Sum" class="form-control" disabled readonly />
        </div>
        <div class="form-group mb-3">
            <i class="bi bi-wallet2"></i>
            <label class="control-label">@Localizer["Payer"]</label>
            <input asp-for="Payer" class="form-control" disabled readonly />
        </div>
        <input type="hidden" asp-for="Id" />
        <button type="button" value="Delete" class="btn btn-danger" ng-click="deleteCheck()">
            <i class="bi bi-trash me-1"></i>@Localizer["DeleteCheckButton"]
        </button>
    </form>
</div>
