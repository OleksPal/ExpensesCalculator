@model DayExpenses

<tr ng-repeat-start="check in pagedChecks[currentPage] | filter:search" style="height: 60px;">
    <td>
        <i class="bi bi-plus-square-fill fs-5" type="button" data-bs-toggle="collapse" ng-click="getCollapseIcon($event)"
                data-bs-target="#collapseExample{{check.Id}}" aria-expanded="false" aria-controls="collapseExample">
        </i>        
    </td>
    <td class="text-nowrap">
        {{check.Location}}
    </td>
    <td class="text-nowrap">
        <div id="check-{{check.Id}}-Sum">
            {{check.Sum | currency : '₴'}}
        </div>
    </td>
    <td class="text-nowrap">
        {{check.Payer}}
    </td>
    <td>
        <div class="d-flex justify-content-end">
            <div class="btn-group" role="group">
                <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                        ng-click="showModalForCheckEdit(check.Id)">
                    <i class="bi bi-pencil"></i>
                </button>
                <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                        ng-click="showModalForCheckDelete(check.Id)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    </td>
</tr>
<tr ng-repeat-end>
    <td colspan="5">
        <div class="collapse" id="collapseExample{{check.Id}}">
            <div class="card card-body dark-blue-1 border-primary" ng-controller="ItemsCtrl">
                <div class="container-fluid p-3 text-white">
                    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                            @* onclick="showModalForItemCreate(@Model.Id, @Model.DayExpensesId)" *@>
                        <i class="bi bi-plus-circle"></i> Add item
                    </button>
                </div>
                <div class="d-flex justify-content-end pb-lg-2 p-3">
                    <div class="col-12 col-lg-3">
                        <div class="input-group">
                            <span class="input-group-text bi bi-search bg-transparent text-white" id="basic-addon1"></span>
                            <input ng-model="itemSearchText" ng-change="search(check.Id)" class="form-control bg-transparent text-white" type="search" aria-describedby="basic-addon1" placeholder="Search for..." />
                        </div>
                    </div>
                </div>
                <div class="table-responsive fix-table-height">
                    <table class="table table-borderless text-white item-table">
                        <thead>
                            <tr>
                                <th class="text-nowrap" ng-click="changeOrder('Name', check.Id)">
                                    <i class="bi bi-box"></i>
                                    @Html.DisplayNameFor(model => model.Checks.First().Items.First().Name)
                                    <i class="bi bi-funnel-fill ps-1"
                                       ng-class="getIcon('Name', check.Id)">
                                    </i>
                                </th>
                                <th class="text-nowrap" ng-click="changeOrder('Description', check.Id)">
                                    <i class="bi bi-alphabet"></i>
                                    @Html.DisplayNameFor(model => model.Checks.First().Items.First().Description)
                                    <i class="bi bi-funnel-fill ps-1"
                                       ng-class="getIcon('Description', check.Id)">
                                    </i>
                                </th>
                                <th class="text-nowrap" ng-click="changeOrder('Price', check.Id)">
                                    <i class="bi bi-coin"></i>
                                    @Html.DisplayNameFor(model => model.Checks.First().Items.First().Price)
                                    <i class="bi bi-funnel-fill ps-1"
                                       ng-class="getIcon('Price', check.Id)">
                                    </i>
                                </th>
                                <th class="text-nowrap" ng-click="changeOrder('Users', check.Id)">
                                    <i class="bi bi-people-fill"></i>
                                    @Html.DisplayNameFor(model => model.Checks.First().Items.First().Users)
                                    <i class="bi bi-funnel-fill ps-1"
                                       ng-class="getIcon('Users', check.Id)">
                                    </i>
                                </th>
                                <th width="120px"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in getCheckItems(check.Id).pagedItems[getCheckItems(check.Id).currentPage]" style="height: 60px;">
                                <td class="text-nowrap">
                                    {{item.Name}}
                                </td>
                                <td class="text-nowrap">
                                    {{item.Description}}
                                </td>
                                <td class="text-nowrap">
                                    {{item.Price | currency : '₴'}}
                                </td>
                                <td class="text-nowrap">
                                    {{item.UsersList.length}} people
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop"
                                                @* onclick="showModalForItemEdit(@item.Id, @Model.DayExpensesId)" *@>
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-danger" data-bs-toggle="modal"
                                                data-bs-target="#staticBackdrop"
                                                @* onclick="showModalForItemDelete(@item.Id)" *@>
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="d-flex align-items-center justify-content-center py-2 pe-4">
                    <ul class="pagination overflow-auto d-flex align-items-center text-nowrap pb-2">
                        <li class="page-item text-nowrap" ng-class="{disabled: getCheckItems(check.Id).currentPage == 0}">
                            <a class="page-link bg-transparent border border-dark" href ng-click="prevPage(check.Id)">« Previous</a>
                        </li>
                        <li class="page-item" ng-repeat="n in range(getCheckItems(check.Id).pagedItems.length)"
                            ng-class="{active: n == getCheckItems(check.Id).currentPage}"
                            ng-click="setPage(n, check.Id)">
                            <a class="page-link bg-transparent border border-dark" href ng-bind="n + 1">1</a>
                        </li>
                        <li class="page-item text-nowrap" ng-class="{disabled: getCheckItems(check.Id).currentPage == getCheckItems(check.Id).pagedItems.length - 1}">
                            <a class="page-link bg-transparent border border-dark" href ng-click="nextPage(check.Id)">Next »</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </td>
</tr>
