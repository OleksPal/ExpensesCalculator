@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model Item

<div class="modal-header">
    <h5 class="modal-title">@Localizer["DeleteItem"]</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <form asp-action="Delete">
        @Html.AntiForgeryToken()
        <input asp-for="CheckId" type="hidden" />
        <input type="hidden" value="@ViewData["CheckId"]" />
        <div class="form-group mb-3">
            <i class="bi bi-box"></i>
            <label class="control-label">@Localizer["Name"]</label>
            <input asp-for="Name" class="form-control" disabled readonly />
        </div>
        <div class="form-group mb-3">
            <i class="bi bi-alphabet"></i>
            <label class="control-label">@Localizer["Description"]</label>
            <input asp-for="Description" class="form-control" disabled readonly />
        </div>
        <div class="form-group mb-3">
            <i class="bi bi-coin"></i>
            <label class="control-label">@Localizer["Price"]</label>
            <input asp-for="Price" class="form-control" disabled readonly />
        </div>
        <div class="form-group mb-3">
            <i class="bi bi-people-fill"></i>
            <label class="control-label">@Localizer["UserList"]</label>
            <input name="UsersList" value="@ViewData["FormatUserList"]" class="form-control" disabled readonly />
        </div>
        <input type="hidden" asp-for="Id"/>
        <button type="button" value="Delete" class="btn btn-danger" ng-click="deleteItem()">
            <i class="bi bi-trash me-1"></i>@Localizer["DeleteItemButton"]
        </button>
    </form>
</div>
